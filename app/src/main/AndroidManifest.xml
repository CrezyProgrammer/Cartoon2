<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cartoon.cartoonvideos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        tools:replace="android:allowBackup"
        android:name="com.cartoon.cartoonvideos.MyApp"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YoutubePlayer">
        <activity android:name="com.cartoon.cartoonvideos.TabActivity"
            android:screenOrientation="portrait"
            >

        </activity>
        <activity android:name="com.cartoon.cartoonvideos.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cartoon.cartoonvideos.PlayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true"/>
        <activity
            android:name="com.cartoon.cartoonvideos.HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.cartoon.cartoonvideos.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true" />
    </application>

</manifest>